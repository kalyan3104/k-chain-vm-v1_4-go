{
    "name": "NFT owned by SC",
    "gasSchedule": "v4",
    "steps": [
        {
            "step": "setState",
            "accounts": {
                "address:owner": {
                    "nonce": "0",
                    "balance": "0"
                },
                "sc:nft_creator": {
                    "nonce": "0",
                    "balance": "0",
                    "dcdt": {
                        "str:NFT-123456": {
                            "roles": [
                                "DCDTRoleNFTCreate"
                            ]
                        }
                    },
                    "code": "file:../output/dcdt-nft-marketplace.wasm"
                },
                "address:seller": {
                    "nonce": "0",
                    "balance": "0",
                    "dcdt": {
                        "str:NFT-123456": {
                            "instances": [
                                {
                                    "nonce": "1",
                                    "balance": "1",
                                    "creator": "sc:nft_creator",
                                    "royalties": "2000"
                                }
                            ]
                        }
                    }
                },
                "address:first_bidder": {
                    "nonce": "0",
                    "balance": "1,000"
                }
            },
            "newAddresses": [
                {
                    "creatorAddress": "address:owner",
                    "creatorNonce": "0",
                    "newAddress": "sc:marketplace"
                }
            ]
        },
        {
            "step": "scDeploy",
            "id": "deploy",
            "comment": "10% cut for the marketplace",
            "tx": {
                "from": "address:owner",
                "contractCode": "file:../output/dcdt-nft-marketplace.wasm",
                "arguments": [
                    "1000"
                ],
                "gasLimit": "9,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "out": [],
                "status": "0",
                "message": "",
                "gas": "*",
                "refund": "*"
            }
        },
        {
            "step": "scCall",
            "id": "auctionToken",
            "comment": "arguments are: min_bid, max_bid, deadline, payment token. Nonce is skipped, since REWA has no nonce",
            "tx": {
                "from": "address:seller",
                "to": "sc:marketplace",
                "dcdtValue": [
                    {
                        "tokenIdentifier": "str:NFT-123456",
                        "nonce": "1",
                        "value": "1"
                    }
                ],
                "function": "auctionToken",
                "arguments": [
                    "100",
                    "1,000",
                    "123,456",
                    "str:REWA"
                ],
                "gasLimit": "20,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "out": [
                    "1"
                ],
                "status": "0",
                "message": "*",
                "gas": "*",
                "refund": "*"
            }
        },
        {
            "step": "scCall",
            "id": "first bid",
            "tx": {
                "from": "address:first_bidder",
                "to": "sc:marketplace",
                "rewaValue": "1000",
                "function": "bid",
                "arguments": [
                    "1",
                    "str:NFT-123456",
                    "1"
                ],
                "gasLimit": "15,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "out": [],
                "status": "0",
                "message": "",
                "gas": "*",
                "refund": "*"
            }
        },
        {
            "step": "scCall",
            "id": "auction max bid reached",
            "comment": "owner, creator and seller will receive part of the final bid",
            "tx": {
                "from": "address:first_bidder",
                "to": "sc:marketplace",
                "function": "endAuction",
                "arguments": [
                    "1"
                ],
                "gasLimit": "12,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "out": [],
                "status": "0",
                "message": "",
                "gas": "*",
                "refund": "*"
            }
        },
        {
            "step": "checkState",
            "accounts": {
                "address:owner": {
                    "nonce": "1",
                    "balance": "100",
                    "storage": {}
                },
                "sc:nft_creator": {
                    "nonce": "0",
                    "balance": "200",
                    "dcdt": {
                        "str:NFT-123456": {
                            "roles": [
                                "DCDTRoleNFTCreate"
                            ]
                        }
                    },
                    "storage": {},
                    "code": "file:../output/dcdt-nft-marketplace.wasm"
                },
                "address:seller": {
                    "nonce": "1",
                    "balance": "700",
                    "storage": {}
                },
                "address:first_bidder": {
                    "nonce": "2",
                    "balance": "0",
                    "dcdt": {
                        "str:NFT-123456": {
                            "instances": [
                                {
                                    "nonce": "1",
                                    "balance": "1",
                                    "creator": "sc:nft_creator",
                                    "royalties": "2000"
                                }
                            ]
                        }
                    },
                    "storage": {}
                },
                "sc:marketplace": {
                    "nonce": "0",
                    "balance": "0",
                    "storage": {
                        "+": ""
                    },
                    "code": "file:../output/dcdt-nft-marketplace.wasm"
                },
                "+": ""
            }
        }
    ]
}
